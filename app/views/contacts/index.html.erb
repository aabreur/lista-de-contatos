<p id="notice"><%= notice %></p>

<h1>Contacts</h1>

<% if @contacts.empty? then %>
  <p>No contacts registered yet</p>
<% else %>

<table class="table table-stripped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Email</th>
      <th>Role</th>
      <th>State</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.name %></td>
        <td><%= contact.age %></td>
        <td><%= contact.email %></td>
        <td><%= contact.role %></td>
        <td><%= contact.state %></td>
        <td><%= link_to 'Show', contact %></td>
        <td><%= link_to 'Edit', edit_contact_path(contact) %></td>
        <td><%= link_to 'Destroy', contact, method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% end %>
<br>

<%= link_to 'New Contact', new_contact_path, class: 'btn btn-default' %>
